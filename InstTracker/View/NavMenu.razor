@inject ICharacterService _characterService

<MudNavMenu>
    <MudNavLink Href="/" Match="NavLinkMatch.All">Главная</MudNavLink>
    <MudNavLink Href="/events" Match="NavLinkMatch.All">Ивенты</MudNavLink>
    <MudNavLink Href="/settings" Match="NavLinkMatch.Prefix">Настройки</MudNavLink>
    <MudNavGroup Title="Персонажи" Expanded="true">

        @foreach (var ch in characters)
        {
            var link = $"/char/{ch.Name}/";
            <MudNavLink Href="@link" Match="NavLinkMatch.Prefix">@ch.Name</MudNavLink>
        }

    </MudNavGroup>
    <MudNavLink Href="/about" Match="NavLinkMatch.Prefix">About</MudNavLink>
    <MudNavLink Href="/debug" Match="NavLinkMatch.Prefix">Отладка</MudNavLink>
</MudNavMenu>

@code {
    private List<Character> characters { get; set; } = default!;


    protected async override Task OnInitializedAsync()
    {
        await Render();
    }

    private async Task Render()
    {
        characters = await _characterService.GetAllCharactersAsync();
        StateHasChanged();
    }
}